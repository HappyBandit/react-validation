{
  "name": "@HappyBandit/react-validation",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/HappyBandit/react-validation"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:babel && npm run build:tsc && npm run copy",
    "build:clean": "rimraf ./dist",
    "build:tsc": "tsc -p \"./tsconfig-build.json\"",
    "build:babel": "babel components --out-dir dist/components --extensions \".ts,.tsx\" --ignore \"**/*.stories.ts,**/*.stories.tsx,**/tests/*\"",
    "copy": "copyfiles \"./components/**/*\" ./dist -e \"./components/**/*.snap\" -e \"./components/**/*.ts\" -e \"./components/**/*.tsx\" -e \"./components/**/*.js\" -e \"./components/**/*.jsx\"",
    "lint": "npm run lint:eslint && npm run lint:css",
    "lint:css": "stylelint \"./components/**/*.css\" \"./components/**/*.scss\"",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "pretest": "npm run test:clean && npm run lint && npm run test:tsc",
    "start": "start-storybook -p 6006",
    "test:clean": "rimraf ./coverage",
    "test": "jest",
    "test:tsc": "tsc",
    "test:watch": "npm run test -- --watchAll"
  },
  "contributors": [
    {
      "name": "Josh Eckhoff"
    }
  ],
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bootstrap": "4.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@sambego/storybook-state": "^1.3.4",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-info": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.1.0",
    "@testing-library/user-event": "^7.1.2",
    "@types/bootstrap": "^4.3.0",
    "@types/jest": "^24.0.11",
    "@types/node": "12.12.21",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "babel-jest": "^24.5.0",
    "babel-loader": "8.0.6",
    "babel-plugin-istanbul": "^5.1.1",
    "copyfiles": "^2.1.0",
    "cross-env": "6.0.3",
    "css-loader": "3.4.0",
    "eslint": "^5.15.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.5.0",
    "jquery": "3.4.1",
    "popper.js": "1.16.0",
    "prop-types": "15.6.1",
    "react": "^16.8.4",
    "react-docgen-typescript-loader": "3.6.0",
    "react-dom": "^16.8.4",
    "rimraf": "^2.6.3",
    "sass-loader": "8.0.0",
    "style-loader": "1.1.1",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "typescript": "^3.6.3"
  }
}
